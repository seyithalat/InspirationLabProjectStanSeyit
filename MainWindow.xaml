<Window x:Class="InspirationLabProjectStanSeyit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Homepage" Height="1000" Width="800"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,30">
            <Image Source="Images/logo.png"
                   Width="300"
                   Height="300"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="Login" Width="120" Height="40" Margin="10,0" Click="LoginButton_Click" 
                        Background="#61be63" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <Button Content="Register" Width="120" Height="40" Margin="10,0" Click="RegisterButton_Click"
                        Background="#61be63" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <Button Content="Friends" Width="120" Height="40" Margin="10,0" Click="OpenFriends_Click"
                        Background="#61be63" Foreground="White" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40" Background="{DynamicResource BackgroundBrush}" HorizontalAlignment="Center" MaxWidth="1200">
                <Border CornerRadius="20" Background="#bbeaba" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Welcome!" FontSize="32" FontWeight="Bold" Foreground="#61be63" TextAlignment="Center"/>
                        <TextBlock Text="Join study groups, connect with tutors, and stay focused with Buddy To Study."
                                   FontSize="20" Foreground="#37474F" TextWrapping="Wrap" TextAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="Explore App Pages" FontSize="24" FontWeight="Bold" Foreground="Gray" Margin="0,20,0,20" TextAlignment="Center"/>

                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="◀" Width="40" Click="PrevImage_Click"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,0">

                        <Button Click="Image1_Click" BorderThickness="0" Background="Transparent" Width="150" Height="100" Margin="5">
                            <Grid>
                                <Image Name="Image1" Stretch="UniformToFill"/>
                                <TextBlock Name="Label1"
                                           Text="Features"
                                           Foreground="White"
                                           Background="#80000000"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Center"
                                           Padding="4"
                                           TextAlignment="Center"/>
                            </Grid>
                        </Button>

                        <Button Click="Image2_Click" BorderThickness="0" Background="Transparent" Width="150" Height="100" Margin="5">
                            <Grid>
                                <Image Name="Image2" Stretch="UniformToFill"/>
                                <TextBlock Name="Label2"
                                           Text="Profile"
                                           Foreground="White"
                                           Background="#80000000"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Center"
                                           Padding="4"
                                           TextAlignment="Center"/>
                            </Grid>
                        </Button>

                        <Button Click="Image3_Click" BorderThickness="0" Background="Transparent" Width="150" Height="100" Margin="5">
                            <Grid>
                                <Image Name="Image3" Stretch="UniformToFill"/>
                                <TextBlock Name="Label3"
                                           Text="Planner"
                                           Foreground="White"
                                           Background="#80000000"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Center"
                                           Padding="4"
                                           TextAlignment="Center"/>
                            </Grid>
                        </Button>

                    </StackPanel>

                    <Button Grid.Column="2" Content="▶" Width="40" Click="NextImage_Click"/>
                </Grid>

                <Border Background="#bbeaba" CornerRadius="15" Padding="20" Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="About Us" FontSize="22" FontWeight="Bold" Foreground="#61be63" TextAlignment="Center"/>
                        <TextBlock Text="Buddy To Study is your digital study companion. Our goal is to make studying social, organized, and efficient. Find peers, join sessions, and stay on top of your goals with ease."
                                   FontSize="16" Foreground="#37474F" TextWrapping="Wrap" TextAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
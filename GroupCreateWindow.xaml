<Window x:Class="InspirationLabProjectStanSeyit.GroupCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InspirationLabProjectStanSeyit"
        mc:Ignorable="d"
        Title="Create Study Group" Height="250" Width="400">
    <Grid Margin="20">
        
        <StackPanel>
            <TextBlock Text="Group Name:"/>
            <TextBox x:Name="GroupNameBox" Margin="0,5,0,15"/>
            <TextBlock Text="Description:"/>
            <TextBox x:Name="GroupDescBox" Margin="0,5,0,15" Height="60"/>
            <Button Content="Create Group" Click="CreateGroup_Click" Width="120" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>

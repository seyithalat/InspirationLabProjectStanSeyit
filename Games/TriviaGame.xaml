<Window x:Class="InspirationLabProjectStanSeyit.Games.TriviaGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trivia Game" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock x:Name="TimerText" FontSize="18" HorizontalAlignment="Center" Margin="0,10"/>
            <TextBlock x:Name="LivesText" FontSize="18" HorizontalAlignment="Center" Margin="0,10"/>
            <TextBlock x:Name="QuestionText" FontSize="24" TextWrapping="Wrap" Margin="0,20"/>
            <TextBlock x:Name="HintText" FontSize="16" HorizontalAlignment="Center" Margin="0,10"/>
            <Button x:Name="Answer1" Content="" Click="Answer_Click" Margin="0,5"/>
            <Button x:Name="Answer2" Content="" Click="Answer_Click" Margin="0,5"/>
            <Button x:Name="Answer3" Content="" Click="Answer_Click" Margin="0,5"/>
            <Button x:Name="Answer4" Content="" Click="Answer_Click" Margin="0,5"/>
            <TextBlock x:Name="ScoreText" FontSize="18" HorizontalAlignment="Center" Margin="0,20"/>
            <TextBlock x:Name="MessageDisplay" FontSize="16" HorizontalAlignment="Center" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window> 
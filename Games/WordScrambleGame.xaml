<Window x:Class="InspirationLabProjectStanSeyit.Games.WordScrambleGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word Scramble Game" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock x:Name="TimerText" FontSize="18" HorizontalAlignment="Center" Margin="0,10"/>
            <TextBlock x:Name="LivesText" FontSize="18" HorizontalAlignment="Center" Margin="0,10"/>
            <TextBlock x:Name="ScrambledWordText" FontSize="24" HorizontalAlignment="Center" Margin="0,20"/>
            <TextBlock x:Name="HintText" FontSize="16" HorizontalAlignment="Center" Margin="0,10"/>
            <TextBox x:Name="AnswerInput" FontSize="18" Margin="0,20" Padding="5"/>
            <Button x:Name="SubmitButton" Content="Submit Answer" Click="SubmitAnswer_Click" Margin="0,10"/>
            <TextBlock x:Name="ScoreText" FontSize="18" HorizontalAlignment="Center" Margin="0,20"/>
            <TextBlock x:Name="MessageDisplay" FontSize="16" HorizontalAlignment="Center" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window> 
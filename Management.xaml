<Window x:Class="InspirationLabProjectStanSeyit.Management"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InspirationLabProjectStanSeyit"
        mc:Ignorable="d"
        Title="Management" Height="800" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Background="White" Margin="20">

            <!-- HEADER -->
            <TextBlock Text="STUDY GROUPS MANAGEMENT" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#61be63"
                       HorizontalAlignment="Center" 
                       Margin="0,10"/>

            <!-- Navigation Carousel -->
            <TextBlock Text="Navigate to Pages" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="Gray" 
                       Margin="0,20,0,10" 
                       TextAlignment="Center"/>

            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="◀" 
                        Width="40" 
                        Height="40"
                        FontSize="20"
                        Background="#61be63"
                        Foreground="White"
                        BorderThickness="0"
                        Click="NavPrevImage_Click"/>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="10,0">
                    <!-- Nav Item 1 -->
                    <Button Click="NavImage1_Click" 
                            BorderThickness="0" 
                            Background="Transparent" 
                            Width="150" 
                            Height="100" 
                            Margin="5">
                        <Grid>
                            <Image Name="NavImage1" 
                                   Stretch="UniformToFill"/>
                            <TextBlock Name="NavLabel1"
                                       Text="Features"
                                       Foreground="White"
                                       Background="#80000000"
                                       FontWeight="Bold"
                                       FontSize="12"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Center"
                                       Padding="4"
                                       TextAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- Nav Item 2 -->
                    <Button Click="NavImage2_Click" 
                            BorderThickness="0" 
                            Background="Transparent" 
                            Width="150" 
                            Height="100" 
                            Margin="5">
                        <Grid>
                            <Image Name="NavImage2" 
                                   Stretch="UniformToFill"/>
                            <TextBlock Name="NavLabel2"
                                       Text="Profile"
                                       Foreground="White"
                                       Background="#80000000"
                                       FontWeight="Bold"
                                       FontSize="12"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Center"
                                       Padding="4"
                                       TextAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- Nav Item 3 -->
                    <Button Click="NavImage3_Click" 
                            BorderThickness="0" 
                            Background="Transparent" 
                            Width="150" 
                            Height="100" 
                            Margin="5">
                        <Grid>
                            <Image Name="NavImage3" 
                                   Stretch="UniformToFill"/>
                            <TextBlock Name="NavLabel3"
                                       Text="Planner"
                                       Foreground="White"
                                       Background="#80000000"
                                       FontWeight="Bold"
                                       FontSize="12"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Center"
                                       Padding="4"
                                       TextAlignment="Center"/>
                        </Grid>
                    </Button>
                </StackPanel>

                <Button Grid.Column="2" 
                        Content="▶" 
                        Width="40" 
                        Height="40"
                        FontSize="20"
                        Background="#61be63"
                        Foreground="White"
                        BorderThickness="0"
                        Click="NavNextImage_Click"/>
            </Grid>

            <!-- STUDY LOCATIONS MAP -->
            <TextBlock Text="STUDY LOCATIONS" 
                       FontSize="22" 
                       Foreground="#61be63" 
                       FontWeight="Bold" 
                       Margin="0,20,0,10"
                       HorizontalAlignment="Center"/>

            <Border Background="#bbeaba" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="300"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Find study locations near you" 
                                  FontSize="16" 
                                  Margin="0,0,0,10"/>
                        <Button x:Name="RefreshLocationButton" 
                                Content="Refresh Location" 
                                Width="150" 
                                Click="RefreshLocation_Click"/>
                    </StackPanel>

                    <Border Grid.Row="1" 
                            Background="White" 
                            BorderBrush="Gray" 
                            BorderThickness="1">
                        <WebBrowser x:Name="MapBrowser" 
                                    Grid.Row="1" 
                                    Margin="10" 
                                    Loaded="MapBrowser_Loaded"/>
                    </Border>
                </Grid>
            </Border>

            <!-- CAROUSEL -->
            <TextBlock Text="Explore Study Locations" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="Gray" 
                       Margin="0,10,0,10" 
                       TextAlignment="Center"/>

            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="◀" 
                        Width="40" 
                        Height="40"
                        FontSize="20"
                        Background="#61be63"
                        Foreground="White"
                        BorderThickness="0"
                        Click="PrevImage_Click"/>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="10,0">
                    <!-- Carousel Item 1 -->
                    <Grid Width="250" Height="150" Margin="5">
                        <Button x:Name="CarouselButton1" 
                                BorderThickness="0" 
                                Background="Transparent" 
                                Click="CarouselItem1_Click">
                            <Image x:Name="CarouselImage1" 
                                   Stretch="UniformToFill"/>
                        </Button>
                        <TextBlock x:Name="CarouselLabel1"
                                   Foreground="White"
                                   Background="#80000000"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Center"
                                   Padding="8"
                                   TextAlignment="Center"/>
                    </Grid>

                    <!-- Carousel Item 2 -->
                    <Grid Width="250" Height="150" Margin="5">
                        <Button x:Name="CarouselButton2" 
                                BorderThickness="0" 
                                Background="Transparent" 
                                Click="CarouselItem2_Click">
                            <Image x:Name="CarouselImage2" 
                                   Stretch="UniformToFill"/>
                        </Button>
                        <TextBlock x:Name="CarouselLabel2"
                                   Foreground="White"
                                   Background="#80000000"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Center"
                                   Padding="8"
                                   TextAlignment="Center"/>
                    </Grid>
                </StackPanel>

                <Button Grid.Column="2" 
                        Content="▶" 
                        Width="40" 
                        Height="40"
                        FontSize="20"
                        Background="#61be63"
                        Foreground="White"
                        BorderThickness="0"
                        Click="NextImage_Click"/>
            </Grid>

            <!-- MY GROUPS SECTION -->
            <TextBlock Text="MY GROUPS" 
                       FontSize="22" 
                       Foreground="#61be63" 
                       FontWeight="Bold" 
                       Margin="0,20,0,10"
                       HorizontalAlignment="Center"/>

            <Border Background="#bbeaba" CornerRadius="10" Padding="15">
                <ListView>
                    <ListViewItem>
                        <StackPanel>
                            <TextBlock Text="Study Group Alpha" FontWeight="Bold"/>
                            <TextBlock Text="Location: Campus Library"/>
                            <TextBlock Text="Thickness: 85% Attendance"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem>
                        <StackPanel>
                            <TextBlock Text="Math Masters" FontWeight="Bold"/>
                            <TextBlock Text="Location: Online"/>
                            <TextBlock Text="Thickness: 92% Attendance"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </Border>

            <!-- REGISTER NEW SECTION -->
            <TextBlock Text="REGISTER NEW GROUP" 
                       FontSize="22" 
                       Foreground="#61be63" 
                       FontWeight="Bold" 
                       Margin="0,20,0,10"
                       HorizontalAlignment="Center"/>

            <Border Background="#bbeaba" CornerRadius="10" Padding="15">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Location:" Margin="0,0,0,5"/>
                            <TextBox Width="200" Margin="0,0,0,10"/>

                            <TextBlock Text="Population:" Margin="0,0,0,5"/>
                            <ComboBox Width="200">
                                <ComboBoxItem>High</ComboBoxItem>
                                <ComboBoxItem>Medium</ComboBoxItem>
                                <ComboBoxItem>Low</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <Button Grid.Column="1" 
                                Content="CREATE GROUP" 
                                Width="150" 
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Click="CreateGroup_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- INVITE SECTION -->
            <TextBlock Text="INVITE MEMBERS" 
                       FontSize="22" 
                       Foreground="#61be63" 
                       FontWeight="Bold" 
                       Margin="0,20,0,10"
                       HorizontalAlignment="Center"/>

            <Border Background="#bbeaba" CornerRadius="10" Padding="15">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" 
                                 Margin="0,0,10,0" 
                                 Height="30"
                                 Text="Enter email address"/>

                        <Button Grid.Column="1" 
                                Content="SEND INVITE" 
                                Width="120" 
                                Height="30"
                                Click="SendInvite_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>
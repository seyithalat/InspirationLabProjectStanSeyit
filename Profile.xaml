<Window x:Class="InspirationLabProjectStanSeyit.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InspirationLabProjectStanSeyit"
        mc:Ignorable="d"

        Title="Profile" Height="800" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Background="{DynamicResource BackgroundBrush}" Margin="20">
            <!-- Comment -->

            <!-- HEADER -->
            <TextBlock Text="PROFILE" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#61be63"
                       HorizontalAlignment="Center" 
                       Margin="0,10"/>

            <!-- Navigation Carousel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
                <Button Content="Map" Width="100" Margin="10" Click="OpenMap_Click" />
                <Button Content="Settings" Width="120" Margin="10" Click="OpenSettings_Click" />
            </StackPanel>

            <TextBlock Text="Navigate to Pages" 
           FontSize="20" 
           FontWeight="Bold" 
           Foreground="Gray" 
           Margin="0,20,0,10" 
           TextAlignment="Center"/>

            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
            Content="◀" 
            Width="40" 
            Height="40"
            FontSize="20"
            Background="#61be63"
            Foreground="White"
            BorderThickness="0"
            Click="NavPrevImage_Click"/>

                <StackPanel Grid.Column="1" 
               Orientation="Horizontal" 
               HorizontalAlignment="Center" 
               Margin="10,0">
                    <!-- Nav Item 1 -->
                    <Button Click="NavImage1_Click" 
                BorderThickness="0" 
                Background="Transparent" 
                Width="150" 
                Height="100" 
                Margin="5">
                        <Grid>
                            <Image Name="NavImage1" 
                       Stretch="UniformToFill"/>
                            <TextBlock Name="NavLabel1"
                           Text="Features"
                           Foreground="White"
                           Background="#80000000"
                           FontWeight="Bold"
                           FontSize="12"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Padding="4"
                           TextAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- Nav Item 2 -->
                    <Button Click="NavImage2_Click" 
                BorderThickness="0" 
                Background="Transparent" 
                Width="150" 
                Height="100" 
                Margin="5">
                        <Grid>
                            <Image Name="NavImage2" 
                       Stretch="UniformToFill"/>
                            <TextBlock Name="NavLabel2"
                           Text="Profile"
                           Foreground="White"
                           Background="#80000000"
                           FontWeight="Bold"
                           FontSize="12"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Padding="4"
                           TextAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- Nav Item 3 -->
                    <Button Click="NavImage3_Click" 
                BorderThickness="0" 
                Background="Transparent" 
                Width="150" 
                Height="100" 
                Margin="5">
                        <Grid>
                            <Image Name="NavImage3" 
                       Stretch="UniformToFill"/>
                            <TextBlock Name="NavLabel3"
                           Text="Planner"
                           Foreground="White"
                           Background="#80000000"
                           FontWeight="Bold"
                           FontSize="12"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Padding="4"
                           TextAlignment="Center"/>
                        </Grid>
                    </Button>
                </StackPanel>

                <Button Grid.Column="2" 
            Content="▶" 
            Width="40" 
            Height="40"
            FontSize="20"
            Background="#61be63"
            Foreground="White"
            BorderThickness="0"
            Click="NavNextImage_Click"/>
            </Grid>


            <!-- PROFILE INFORMATION -->
            <TextBlock Text="Personal Information" 
                       FontSize="22" 
                       Foreground="#61be63" 
                       FontWeight="Bold" 
                       Margin="0,20,0,10"
                       HorizontalAlignment="Center"/>

            <Border Background="{DynamicResource AccentBrush}" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Profile Picture -->
                    <Border Grid.Column="0" 
                            Width="150" 
                            Height="150" 
                            Background="{DynamicResource ControlBackgroundBrush}" 
                            CornerRadius="75" 
                            Margin="0,0,20,0">
                        <Image Name="ProfilePicture" 
                               Source="/Images/profilepicture.jpg" 
                               Stretch="UniformToFill"/>
                    </Border>

                    <!-- Profile Details -->
                    <StackPanel Grid.Column="1">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name:" 
                                       Width="100" 
                                       FontWeight="Bold"/>
                            <TextBox Grid.Column="1" 
                                     Name="NameTextBox" 
                                     Text="Jane Doe"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Age:" 
                                       Width="100" 
                                       FontWeight="Bold"/>
                            <TextBox Grid.Column="1" 
                                     Name="AgeTextBox" 
                                     Text="22"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="School:" 
                                       Width="100" 
                                       FontWeight="Bold"/>
                            <TextBox Grid.Column="1" 
                                     Name="SchoolTextBox" 
                                     Text="Thomas More Hogeschool"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Course:" 
                                       Width="100" 
                                       FontWeight="Bold"/>
                            <TextBox Grid.Column="1" 
                                     Name="CourseTextBox" 
                                     Text="Software Engineering"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Year:" 
                                       Width="100" 
                                       FontWeight="Bold"/>
                            <TextBox Grid.Column="1" 
                                     Name="YearTextBox" 
                                     Text="1st Year"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Bio:" Width="100" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Name="BioTextBox"/>
                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Birthday:" Width="100" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Name="BirthdayTextBox"/>
                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Location:" Width="100" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Name="LocationTextBox"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- STUDY STATISTICS -->
            <TextBlock Text="Study Statistics" 
                       FontSize="22" 
                       Foreground="#61be63" 
                       FontWeight="Bold" 
                       Margin="0,20,0,10"
                       HorizontalAlignment="Center"/>

            <Border Background="{DynamicResource AccentBrush}" CornerRadius="10" Padding="20" Margin="0,0,0,20">
    <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Study Hours -->
                    <StackPanel Grid.Column="0" Margin="10">
                        <TextBlock Text="Study Hours" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource AccentBrush}"/>
                        <TextBlock Text="45" 
                                   x:Name="StudyHoursTextBlock"
                                   FontSize="24" 
                                   Foreground="{DynamicResource AccentBrush}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Study Groups -->
                    <StackPanel Grid.Column="1" Margin="10">
                        <Button Click="StudyGroups_Click" 
                                Background="Transparent" 
                                BorderThickness="0">
                            <StackPanel>
                                <TextBlock Text="Study Groups" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource AccentBrush}"/>
                                <TextBlock Text="3" 
                                           x:Name="StudyGroupsCountTextBlock"
                                           FontSize="24" 
                                           Foreground="{DynamicResource AccentBrush}" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Notes -->
                    <StackPanel Grid.Column="2" Margin="10">
                        <Button Click="Notes_Click" 
                                Background="Transparent" 
                                BorderThickness="0">
                            <StackPanel>
                                <TextBlock Text="Notes" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource AccentBrush}"/>
                                <TextBlock Text="12" 
                                           x:Name="NotesCountTextBlock"
                                           FontSize="24" 
                                           Foreground="{DynamicResource AccentBrush}" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
    </Grid>
            </Border>

            <!-- SAVE BUTTON -->
            <Button Content="SAVE CHANGES" 
                    Width="200" 
                    Height="40"
                    Background="#61be63"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Click="SaveChanges_Click"/>

        </StackPanel>
    </ScrollViewer>

        Title="Profile" Height="450" Width="800">
    <Grid>
        
    </Grid>

</Window>

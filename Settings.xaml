<Window x:Class="InspirationLabProjectStanSeyit.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="250" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <CheckBox x:Name="DarkModeToggle" Content="Enable Dark Mode" Margin="0,0,0,20"
                  Checked="DarkModeToggle_Checked" Unchecked="DarkModeToggle_Unchecked"/>
        <Button Content="Delete Account" Click="DeleteAccount_Click" Background="Red" Foreground="White" Margin="0,0,0,20"/>
        <Button Content="Close" Click="Close_Click"/>
    </StackPanel>
</Window>

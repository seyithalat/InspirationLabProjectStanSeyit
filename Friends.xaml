<Window x:Class="InspirationLabProjectStanSeyit.Friends"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Friends" Height="800" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Background="{DynamicResource BackgroundBrush}" Margin="20">
            <TextBlock Text="Pending Friend Requests" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <ListBox Name="FriendsListBox" Height="200"/>

            <!-- 🔹 FRIENDS HEADER -->
            <TextBlock Text="FRIENDS" FontSize="24" FontWeight="Bold" Foreground="#61be63"
                       HorizontalAlignment="Center" Margin="0,10"/>

            <!-- Friends List and Add Friend -->
            <Border Background="{DynamicResource AccentBrush}" CornerRadius="10" Padding="10" Margin="0,20,0,10">
                <TextBlock Text="Your Friends" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}"/>
            </Border>
            <Border Background="{DynamicResource ControlBackgroundBrush}" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                <ListBox Name="FriendsListBox_Old" Height="200">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Email}" FontStyle="Italic" FontSize="12"/>
                                <TextBlock Text="@{Binding Username}" FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
            <TextBlock Text="Enter: Full Name, Email, or Username" FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Name="AddFriendTextBox" Width="300" Height="30" Margin="0,0,10,0"/>
                <Button Content="Add Friend" Width="100" Click="AddFriend_Click"/>
            </StackPanel>
            <Button Content="Chat with Selected Friend" Width="200" Click="OpenChat_Click"/>
            <Button Content="Delete Selected Friend" Width="200" Margin="0,0,0,10" Click="DeleteFriend_Click"/>

        </StackPanel>
    </ScrollViewer>
</Window>

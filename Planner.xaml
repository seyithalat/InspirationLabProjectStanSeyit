<Window x:Class="InspirationLabProjectStanSeyit.Planner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InspirationLabProjectStanSeyit"
        mc:Ignorable="d"
        Title="Planner" Height="800" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Background="{StaticResource BackgroundBrush}" Margin="20">

            <!--  FEATURES HEADER -->
            <TextBlock Text="Planner" FontSize="24" FontWeight="Bold" Foreground="#61be63"
                       HorizontalAlignment="Center" Margin="0,10"/>

            <!--  MULTI-IMAGE CAROUSEL (Clickable with Overlay Text) -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button Content="Back to Settings" Width="150" Margin="10" Click="BackToSettings_Click" />
                <Button Content="Map" Width="100" Margin="10" Click="OpenMap_Click" />
            </StackPanel>

            <!--  Calender SECTION -->
            <TextBlock Text="Calender" FontSize="22" Foreground="#61be63" FontWeight="Bold" Margin="0,20,0,10"
                       HorizontalAlignment="Center"/>
            <Border Background="{StaticResource AccentBrush}" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Here you can make a planning keep notes and never lose track of your tasks!" HorizontalAlignment="Center" ></TextBlock>
                </StackPanel>
            </Border>
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">

                    <TextBlock x:Name="MonthYearText" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="10"/>

                </StackPanel>

                <Calendar 
    x:Name="PlannerCalendar" 
    SelectedDatesChanged="PlannerCalendar_SelectedDatesChanged"
    DisplayDateChanged="PlannerCalendar_DisplayDateChanged"
    Margin="10" 
    BorderThickness="1" 
    BorderBrush="Gray" />


                <TextBlock Text="Add Note:" FontWeight="Bold" Margin="10,10,0,5"/>
                <TextBox x:Name="NoteTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Save Note" Width="100" Margin="10" Click="SaveNote_Click"/>
                    <Button Content="Delete Note" Width="100" Margin="10" Click="DeleteNote_Click"/>
                </StackPanel>


                <TextBlock Text="Notes for Selected Date:" FontWeight="Bold" Margin="10,10,0,5"/>
                <TextBlock x:Name="SavedNoteText" TextWrapping="Wrap" Margin="10" Background="{StaticResource ControlBackgroundBrush}" Padding="10" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
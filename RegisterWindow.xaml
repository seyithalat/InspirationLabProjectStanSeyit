<Window x:Class="InspirationLabProjectStanSeyit.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Username" />
            <TextBox Name="UsernameBox" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Email" />
            <TextBox Name="EmailBox" />
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <Label Content="Password" />
            <PasswordBox Name="PasswordBox" />
        </StackPanel>

        <Button Grid.Row="3" Content="Register" Width="100" HorizontalAlignment="Center" Click="Register_Click" />
    </Grid>
</Window>
<Window x:Class="InspirationLabProjectStanSeyit.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="600" Width="500"
        Background="#bbeaba" WindowStartupLocation="CenterScreen">
    <Grid Margin="40">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create Account" FontSize="32" FontWeight="Bold" Foreground="#2e2e2e" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Label Content="First Name" FontSize="14" FontWeight="Bold" Foreground="#2e2e2e"/>
            <TextBox Name="FirstNameBox" Height="40" Padding="10" FontSize="11"
                     BorderBrush="#61be63" BorderThickness="2" Background="White"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <Label Content="Last Name" FontSize="14" FontWeight="Bold" Foreground="#2e2e2e"/>
            <TextBox Name="LastNameBox" Height="40" Padding="10" FontSize="11"
                     BorderBrush="#61be63" BorderThickness="2" Background="White"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <Label Content="Username" FontSize="14" FontWeight="Bold" Foreground="#2e2e2e"/>
            <TextBox Name="UsernameBox" Height="40" Padding="10" FontSize="11"
                     BorderBrush="#61be63" BorderThickness="2" Background="White"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <Label Content="Email" FontSize="14" FontWeight="Bold" Foreground="#2e2e2e"/>
            <TextBox Name="EmailBox" Height="40" Padding="10" FontSize="11"
                     BorderBrush="#61be63" BorderThickness="2" Background="White"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="0,0,0,15">
            <Label Content="Password" FontSize="14" FontWeight="Bold" Foreground="#2e2e2e"/>
            <PasswordBox Name="PasswordBox" Height="40" Padding="10" FontSize="12"
                         BorderBrush="#61be63" BorderThickness="2" Background="White"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Margin="0,0,0,15">
            <Label Content="Confirm Password" FontSize="14" FontWeight="Bold" Foreground="#2e2e2e"/>
            <PasswordBox Name="ConfirmPasswordBox" Height="40" Padding="10" FontSize="12"
                         BorderBrush="#61be63" BorderThickness="2" Background="White"/>
        </StackPanel>

        <Button Grid.Row="7" Content="Register" Width="200" Height="50"
                HorizontalAlignment="Center"
                Background="#61be63" Foreground="White"
                FontSize="18" FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="Register_Click"/>
    </Grid>
</Window>
